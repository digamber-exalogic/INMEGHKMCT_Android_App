<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.AdminMenuStudentAttendance"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:background="@drawable/timetable_card_content"
        >


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/calendarstyle"
        android:paddingBottom="50dp"
        android:elevation="30dp"
        android:outlineSpotShadowColor="@color/colorPrimary">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            >

            <android.support.design.button.MaterialButton
                android:id="@+id/btnMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textColor="#fff"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:layout_weight="0.3"
                android:gravity="center"
                app:rippleColor="@color/white_transparent"
                android:elevation="5dp"/>

            <android.support.design.button.MaterialButton
                android:id="@+id/btnTue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:textColor="#fff"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.3"
                android:gravity="center"
                app:rippleColor="@color/white_transparent"
                android:elevation="5dp"/>

            <android.support.design.button.MaterialButton
                android:id="@+id/btnWed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:textColor="#fff"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:layout_weight="0.3"
                android:gravity="center"
                app:rippleColor="@color/white_transparent"
                android:elevation="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <android.support.design.button.MaterialButton
                android:id="@+id/btnThu"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:textColor="#fff"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:gravity="center"
                app:rippleColor="@color/white_transparent"
                android:elevation="5dp"/>

            <android.support.design.button.MaterialButton
                android:id="@+id/btnFri"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:textColor="#fff"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                app:rippleColor="@color/white_transparent"
                android:elevation="5dp"/>

            <android.support.design.button.MaterialButton
                android:id="@+id/btnSat"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:textColor="#fff"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:gravity="center"
                app:rippleColor="@color/white_transparent"
                android:elevation="5dp"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Select A Day"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_date"
            android:textSize="18sp"
            android:gravity="center"
            />


    </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvTimetableList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>


</LinearLayout>